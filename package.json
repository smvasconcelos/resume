{
  "name": "resume",
  "homepage": "https://smvasconcelos.github.io/resume",
  "private": false,
  "version": "2.2.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "build-tsx": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "commit": "git-cz",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@remixicon/react": "^4.2.0",
    "@tanstack/react-query": "^5.51.15",
    "antd": "^6.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "framer-motion": "^12.27.1",
    "gh-pages": "^6.2.0",
    "gotham-fonts": "^1.0.3",
    "i18next": "^25.7.4",
    "pnpm": "^10.19.0",
    "prettier": "^3.3.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.3",
    "react-popper": "^2.3.0",
    "react-router-dom": "^7.12.0",
    "react-syntax-highlighter": "^16.1.0",
    "react-toastify": "^11.0.5",
    "styled-components": "^6.1.12",
    "svgo": "^4.0.0",
    "use-debounce": "^10.0.4",
    "vite-plugin-svgr": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/webfontloader": "^1.6.38",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "commitizen": "^4.3.0",
    "eslint": "^9.38.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.7",
    "lint-staged": "16.2.7",
    "stylelint": "17.0.0",
    "stylelint-config-standard": "40.0.0",
    "typescript": "^5.5.4",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.4"
  },
  "lint-staged": {
    "src/**/*.@(js|jsx|ts|tsx|html|css)": "prettier --write --max-warnings=0",
    "src/**/*.@(js|jsx|ts|tsx)": [
      "eslint --max-warnings=0"
    ],
    "**/*.ts": [
      "stylelint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "feat": {
          "title": "feat",
          "description": "Adiciona uma nova funcionalidade."
        },
        "fix": {
          "title": "fix",
          "description": "Corrige um bug."
        },
        "docs": {
          "title": "docs",
          "description": "Mudanças em documentações."
        },
        "style": {
          "title": "style",
          "description": "Modifica apenas o estilo do código (ponto e virgula, identação, etc.)."
        },
        "refactor": {
          "title": "refactor",
          "description": "Refatora alguma parte do código, sem adicionar testes ou funcionalidades."
        },
        "revert": {
          "title": "revert",
          "description": "Reverte algum commit."
        },
        "merge": {
          "title": "merge",
          "description": "Faz o merge de uma branch em outra."
        },
        "test": {
          "title": "test",
          "description": "Adiciona testes."
        },
        "chore": {
          "title": "chore",
          "description": "Modifica alguma configuração fora da src, no chore da aplicação (eslint, prettier, etc.)"
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
